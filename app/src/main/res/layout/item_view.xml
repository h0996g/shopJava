<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/nameFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iconShop"
        android:layout_marginTop="45dp"
        tools:text="Name"
        android:textSize="16dp"
        android:textColor="@color/shopping_cart"
        />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:textSize="14sp"
        android:layout_below="@+id/nameFood"
        android:layout_alignEnd="@+id/iconShop"
        android:layout_marginRight="-25dp"
        />

    <TextView
        android:id="@+id/totalItemPrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameFood"
        tools:text="Price"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-20dp"
        android:textColor="@color/shopping_cart"
        android:textStyle="bold"
        android:textSize="17dp"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameFood"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"

        >
        <TextView
            android:id="@+id/qua"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="17dp"




            />
        <TextView
            android:id="@+id/darb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="17dp"
            />
        <TextView
            android:id="@+id/prix1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:textSize="17dp"




            />

        <TextView
            android:id="@+id/dzd"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" DZD"
            android:textSize="17dp"




            />

    </LinearLayout>

    <TextView
        android:id="@+id/iconShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:drawableLeft="@drawable/baseline_add_shopping_cart_24"
        android:layout_marginTop="53dp"
        android:layout_marginRight="15dp"
        />


    <ImageButton
        android:id="@+id/add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/nameFood"
        android:background="@drawable/button_increase"
        android:text="+"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_alignEnd="@+id/nameFood"
        android:layout_marginRight="29dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/secondaryPriceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalItemPrix"
        android:layout_marginLeft="230dp"
        android:text=""
        android:textColor="@color/shopping_cart"/>

    <Button
        android:id="@+id/min"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/add"
        android:layout_alignEnd="@+id/nameFood"
        android:background="@drawable/button_decrease"
        android:text="-"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DAD8D8"
        android:layout_below="@+id/image"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>